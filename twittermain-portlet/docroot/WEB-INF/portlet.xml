<?xml version="1.0"?>

<portlet-app
	version="2.0"
	xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
>
	<portlet>
		<portlet-name>Twitter Suite</portlet-name>
		<display-name>Twitter Main Portlet</display-name>
		<portlet-class>it.unibz.twitterportlet.TwitterMain</portlet-class>
		<init-param>
			<name>view-jsp</name><value>/view.jsp</value>
</init-param>
<init-param>
			<name>edit-jsp</name><value>/edit.jsp</value>
</init-param>
<init-param>
			<name>error-jsp</name><value>/error.jsp</value>
</init-param>
<init-param>
			<name>success-jsp</name><value>/success.jsp</value>
</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
		</supports>
		<portlet-info>
			<title>Twitter Timeline</title>
			<short-title>Twitter Main Portlet</short-title>
			<keywords>twitterPortlet</keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>
        <portlet>
		<portlet-name>Twitter Follower</portlet-name>
		<display-name>Twitter Follower Portlet</display-name>
		<portlet-class>it.unibz.twitterportlet.TwitterFollower</portlet-class>
		<init-param>
			<name>follower-jsp</name><value>/followers.jsp</value>
</init-param>
<init-param>
			<name>edit-jsp</name><value>/edit.jsp</value>
</init-param>
<init-param>
			<name>error-jsp</name><value>/error.jsp</value>
</init-param>
<init-param>
			<name>success-jsp</name><value>/success.jsp</value>
</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
		</supports>
		<portlet-info>
			<title>Twitter Follower</title>
			<short-title>Twitter Follower Portlet</short-title>
			<keywords>twitterPortlet</keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>
        <portlet>
		<portlet-name>Twitter Login</portlet-name>
		<display-name>Twitter Login Portlet</display-name>
		<portlet-class>it.unibz.twitterportlet.TwitterLogin</portlet-class>
		
<init-param>
			<name>error-jsp</name><value>/error.jsp</value>
</init-param>
<init-param>
			<name>success-jsp</name><value>/success.jsp</value>
</init-param>
<init-param>
			<name>edit-jsp</name><value>/edit.jsp</value>
</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
		</supports>
		<portlet-info>
			<title>Twitter Login</title>
			<short-title>Twitter Login Portlet</short-title>
			<keywords>twitterPortlet</keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>
</portlet-app>
