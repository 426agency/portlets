<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns:context="http://www.springframework.org/schema/context"
xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">


  <bean id="rolodexServiceTarget"
      class="com.springinaction.rolodex.service.RolodexServiceImpl">
    <property name="rolodexDao"
        ref="rolodexDao"/>
  </bean>

<bean id="rolodexService" class="org.springframework.aop.framework.ProxyFactoryBean">
	<property name="proxyInterfaces"><value>com.springinaction.rolodex.service.RolodexService</value></property>
	<property name="target"><ref bean="rolodexServiceTarget"/></property>
	<property name="interceptorNames">
		<list><value> theLogger </value> </list>
	</property>
</bean>
<bean id="theLogger" class="org.springframework.aop.support.RegexpMethodPointcutAdvisor">
	<property name="advice"> <ref local="loggingInterceptor"/> </property>
	<property name="patterns"> <value>.*get.*</value> </property>
</bean>
<bean id=" loggingInterceptor" class="com.springinaction.rolodex.aop.LoggingInterceptor"/>

